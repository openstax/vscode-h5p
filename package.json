{
  "name": "vscode-h5p",
  "displayName": "H5P Viewer",
  "publisher": "sparksam",
  "description": "Visualize H5P files in VS Code",
  "version": "0.0.1",
  "author": "Samuel A. Klutse",
  "license": "MIT",
  "homepage": "https://samuelklutse.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/sparksam/vscode-h5p"
  },
  "bugs": {
    "url": "https://github.com/sparksam/vscode-h5p/issues",
    "email": "klutse.samuel@gmail.com"
  },
  "icon": "assets/favicon.png",
  "galleryBanner": {
    "color": "#333333",
    "theme": "dark"
  },
  "categories": [
    "Visualization"
  ],
  "engines": {
    "node": ">=16.x",
    "pnpm": ">=7.x",
    "vscode": ">=1.46.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "customEditors": [
      {
        "viewType": "h5p.web.viewer",
        "displayName": "H5P Viewer",
        "selector": [
          {
            "filenamePattern": "*.{h5p}"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "h5p.web.fallback-viewer",
        "displayName": "H5P (any extension)",
        "selector": [
          {
            "filenamePattern": "*"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "format": "prettier --write .",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "clean": "rm -rf client/out server/out client/node_modules server/node_modules node_modules"
  },
  "devDependencies": {
    "@types/cache-manager": "4.0.2",
    "@types/express": "4.17.15",
    "@types/express-fileupload": "1.4.1",
    "@types/fs-extra": "11.0.1",
    "@types/node": "16.11.7",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "@types/unzip-stream": "0.3.1",
    "@types/vscode": "1.46.0",
    "@vitejs/plugin-react": "1.3.2",
    "esbuild": "0.14.49",
    "prettier": "2.7.1",
    "typescript": "4.7.3",
    "vite": "4.0.0"
  },
  "dependencies": {
    "pnpm": "8.5.0"
  }
}
