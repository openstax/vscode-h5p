{
  "name": "vscode-h5p",
  "displayName": "H5P Viewer",
  "publisher": "openstax",
  "description": "Visualize H5P files in VS Code",
  "version": "0.0.1",
  "author": "OpenStax",
  "license": "MIT",
  "homepage": "https://openstax.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/openstax/vscode-h5p"
  },
  "bugs": {
    "url": "https://github.com/openstax/vscode-h5p/issues"
  },
  "galleryBanner": {
    "color": "#333333",
    "theme": "dark"
  },
  "categories": [
    "Visualization"
  ],
  "engines": {
    "node": ">=16.x",
    "pnpm": ">=7.x",
    "vscode": ">=1.46.0"
  },
  "main": "./client/out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "h5p.web.showEditor",
        "title": "H5P Editor",
        "category": "H5P Editor"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "h5p.web.showEditor",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "os-h5p",
          "title": "H5P Editor",
          "icon": "$(preview)"
        }
      ]
    },
    "views": {
      "os-h5p": [
        {
          "id": "h5p-controls",
          "name": "Controls"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "h5p-controls",
        "contents": "[Open H5P Editor](command:h5p.web.showEditor)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "format": "prettier --ignore-path ./.eslintignore --write .",
    "build:client": "npm run build --prefix ./client",
    "build:server": "npm run build --prefix ./server",
    "build": "run-s build:*",
    "lint": "prettier --ignore-path ./.eslintignore --check . && eslint ./client/src ./server/src --ext .ts,.tsx",
    "install:client": "npm --prefix ./client install",
    "install:server": "npm --prefix ./server install",
    "postinstall": "run-s install:*",
    "test:client": "npm --prefix ./client run test",
    "test:sever": "npm --prefix ./server run test",
    "coverage:merge": "istanbul-merge --out ./.nyc_output/coverage.json ./*/coverage/coverage-final.json",
    "coverage:report": "nyc report  --reporter=lcov --reporter=text --reporter=html",
    "test": "run-s test:* coverage:*",
    "clean": "del-cli client/out server/out",
    "package": "vsce package"
  },
  "devDependencies": {
    "@swc/core": "1.3.68",
    "@types/cache-manager": "4.0.2",
    "@types/express": "4.17.15",
    "@types/express-fileupload": "1.4.1",
    "@types/fs-extra": "11.0.1",
    "@types/node": "16.11.7",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "@types/unzip-stream": "0.3.1",
    "@types/vscode": "1.46.0",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@vitejs/plugin-react": "1.3.2",
    "@vscode/vsce": "2.19.0",
    "del-cli": "5.1.0",
    "esbuild": "0.14.49",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "istanbul-merge": "2.0.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "pnpm": "8.6.12",
    "prettier": "3.1.0",
    "ts-node": "10.9.1",
    "vite": "4.4.9"
  }
}
