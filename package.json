{
  "name": "vscode-h5p",
  "displayName": "H5P Viewer",
  "publisher": "openstax",
  "description": "Visualize H5P files in VS Code",
  "version": "0.0.1",
  "author": "OpenStax",
  "license": "MIT",
  "homepage": "https://openstax.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/openstax/vscode-h5p"
  },
  "bugs": {
    "url": "https://github.com/openstax/vscode-h5p/issues"
  },
  "galleryBanner": {
    "color": "#333333",
    "theme": "dark"
  },
  "categories": [
    "Visualization"
  ],
  "engines": {
    "node": ">=16.x",
    "pnpm": ">=7.x",
    "vscode": ">=1.46.0"
  },
  "main": "./client/out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "h5p.web.showEditor",
        "title": "Show Editor",
        "category": "H5P Editor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "os-h5p",
          "title": "H5P Editor",
          "icon": "$(preview)"
        }
      ]
    },
    "views": {
      "os-h5p": [
        {
          "id": "h5p-controls",
          "name": "Controls"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "h5p-controls",
        "contents": "[Open H5P Editor](command:h5p.web.showEditor)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "format": "prettier --write .",
    "build": "npm run build --prefix ./client && npm run build --prefix ./server",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "npm --prefix ./client run test && npm --prefix ./server run test",
    "clean": "rm -rf client/out server/out client/node_modules server/node_modules node_modules",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/cache-manager": "4.0.2",
    "@types/express": "4.17.15",
    "@types/express-fileupload": "1.4.1",
    "@types/fs-extra": "11.0.1",
    "@types/node": "16.11.7",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "@types/unzip-stream": "0.3.1",
    "@types/vscode": "1.46.0",
    "@vitejs/plugin-react": "1.3.2",
    "esbuild": "0.14.49",
    "pnpm": "8.5.0",
    "prettier": "2.7.1",
    "vite": "4.0.0",
    "vsce": "2.15.0"
  }
}
